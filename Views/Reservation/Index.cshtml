@model IEnumerable<GestionSalleDeMariage.Models.Reservation>
@{
    ViewData["Title"] = "Liste des réservations";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a class="btn btn-primary" asp-action="Create">Ajouter une réservation</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Nombre d'invités</th>
            <th>Client</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Date.ToString("yyyy-MM-dd")</td>
            <td>@item.NombreInvites</td>
            <td>@item.Client?.Nom</td>
            <td>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Modifier</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
    }
    </tbody>
</table> 