@model GestionSalleDeMariage.Models.Reservation
@{
    ViewData["Title"] = "Supprimer la réservation";
}
<h2>@ViewData["Title"]</h2>
<h3>Voulez-vous vraiment supprimer cette réservation ?</h3>
<div>
    <h4>Client : @Model.Client?.Nom</h4>
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Nombre d'invités</dt>
        <dd class="col-sm-10">@Model.NombreInvites</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
</div> 