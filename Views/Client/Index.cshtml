@model IEnumerable<GestionSalleDeMariage.Models.Client>
@{
    ViewData["Title"] = "Liste des clients";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a class="btn btn-primary" asp-action="Create">Ajouter un client</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nom</td>
            <td>@item.Email</td>
            <td>@item.Telephone</td>
            <td>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Modifier</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
    }
    </tbody>
</table> 