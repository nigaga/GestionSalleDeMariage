@model GestionSalleDeMariage.Models.Client
@{
    ViewData["Title"] = "Supprimer le client";
}
<h2>@ViewData["Title"]</h2>
<h3>Voulez-vous vraiment supprimer ce client ?</h3>
<div>
    <h4>@Model.Nom</h4>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Téléphone</dt>
        <dd class="col-sm-10">@Model.Telephone</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
</div> 